<div class="card mb-3">
	<div class="card-body">
		<h5 class="card-title">Select Seats</h5>
		<% @seats.each do |seat| %>
			<label>
				<%= check_box_tag 'seat_ids[]', seat.id %>
		        <span class="badge badge-success seat-toggle"><%= seat.code %></span>
			</label>
		<% end %>
	</div>
</div>